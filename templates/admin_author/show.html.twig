{% extends 'base-backend.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
<a href="{{ path('app_admin_author_index') }}"class="btn btn-dark -sm">Retour a la liste</a>
    <h1 class ="mt-3">Auteur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ author.name }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ author.firstName }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ author.pseudo }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ author.imageName }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ author.updatedAt ? author.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Biography</th>
                <td>{{ author.biography }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ author.birthdate ? author.birthdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateOfDeath</th>
                <td>{{ author.dateOfDeath ? author.dateOfDeath|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ author.slug }}</td>
            </tr>
        </tbody>
    </table>

    
    <div class = " d-flex justify-content-between align-items-center">
    <a href="{{ path('app_admin_author_edit', {'id': author.id}) }}"class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>

    {{ include('admin_author/_delete_form.html.twig') }}
</div>
{% endblock %}
